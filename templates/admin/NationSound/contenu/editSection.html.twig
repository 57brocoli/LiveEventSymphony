{% extends 'base.html.twig' %}

{% block title %}
	Edition Section
{% endblock %}

{% block body %}
	<body id='homeNationSound'>
		<header class='container pt-5 px-4 px-lg-0'>
			<h1 class='text-white text-center title test mb-4'>
				Edition Section
			</h1>
			<hr>
		</header>
		<section class='container'>
			<section class='my-3'>{% include '_partials/_dashboardNationSound.html.twig' %}</section>
			<section class="row pt-4">
				{{ form_start(form) }}
				{{ form_row(form.title) }}
				{{ form_row(form.content) }}
				{{ form_row(form.images) }}
				{% if section.images is not empty %}
					<h4>Images :</h4>
					<section class='d-inline-flex flex-wrap justify-content-center border rounded mb-3'>
						{% for image in section.images %}
							<div class='m-3 d-flex flex-column '>
								<img src="{{asset('assets/uploads/figure/' ~ image.name) }}" alt="image.name" class='p-0 rounded-top' style="width:400px;">
								<a href="{{path('nationSound_contenu_delete_section_image', {pagename: name, id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}" class='rounded-bottom bg-danger text-decoration-none text-white p-1 text-center'>Supprimer</a>
							</div>
						{% endfor %}
					</section>
				{% endif %}
				<section>
					{{ form_label(form.display, 'Style de mise en page' ) }}
					<span>
						<i class="fa-solid fa-info ms-2 mb-2 btn btn-sm border" type="button" data-bs-toggle="modal" data-bs-target="#imagesPrincipalModal"></i>
						<section class="modal fade" id="imagesPrincipalModal" tabindex="-1" aria-labelledby="imagesPrincipalModal" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered modal-xl">
								<div class="modal-content">
									<article class="modal-header ">
										<h3 class="modal-title fs-3 fw-bold" id="imagesPrincipalModal">Mise en page</h3>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</article>
									<article class="modal-body ">
										<h4 class='fw-bold'>Ce champ permet de définir la manière dont les élèments seront placé sur la page</h4>
										<section class='border rounded my-2 p-2'>
											<h4>style 1</h4>
											<hr class='mt-0'>
											<h4 class='fw-bold text-center'>Titre</h4>
											<p class='text-center'>Text</p>
											<div class='displayt text-center'></div>
											<div class='text-center mt-2'>
												<div class='btn btn-sm btn-primary'>boutton</div>
											</div>
										</section>
										<section class='border rounded my-2 p-2'>
											<h4>style 2</h4>
											<hr class='mt-0'>
											<div class='displayt text-white text-center py-3'>
												<h4 class='fw-bold'>Titre</h4>
												<p>Text</p>
												<div class='btn btn-sm btn-primary'>boutton</div>
											</div>
										</section>
										<section class='border rounded my-2 p-2'>
											<h4>style 3</h4>
											<hr class='mt-0'>
											<h4 class='fw-bold text-center'>Titre</h4>
											<p class='text-center'>Text</p>
											<div class='d-flex justify-content-evenly'>
												<div class='displayflex mx-2'></div>
												<div class='displayflex mx-2'></div>
												<div class='displayflex mx-2'></div>
											</div>
										</section>
									</article>
									<section class="modal-footer">
										<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Ok</button>
									</section>
								</div>
							</div>
						</section>
					</span>
					{{ form_row(form.display) }}
				</section>
				{{ form_end(form) }}
			</section>
		</section>
	</body>
{% endblock %}
{% block javascripts %}
	<script src='{{asset('assets/js/images.js')}}' defer></script>
{% endblock %}
