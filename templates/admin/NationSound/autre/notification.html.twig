{% extends 'base.html.twig' %}

{% block title %}Notification
{% endblock %}

{% block body %}
	<body id='homeNationSound'>
		<header class='container pt-5 px-4 px-lg-0'>
			<h1 class='text-white text-center title mb-4'>
				Notifications
			</h1>
			<hr>
		</header>
		<section class='container'>
			<section class="row">
				{% if notifications is not empty %}
					<div class='my-3'>
						{% include '_partials/_dashboardNationSound.html.twig' %}
						<a href="{{path('nationSound_notification_edit')}}" class='btn btn-success'>Ajouter une notification</a>
						<section class='d-flex justify-content-around flex-wrap'>
							{% for notification in notifications %}
								<article class='card p-0 border-0 rounded col-3 m-3 mt-4'>
									<div class="card-body d-flex flex-column justify-content-between">
										<h5 class="card-title m-0 text-center">{{notification.title}}</h5>
										<hr>
										<div>
											<h5>Statut :
												{% if notification.actived %}
													<span class='text-success font-weight-bold'>Activé</span>
												{% elseif notification.actived == false %}
													<span class='text-warning font-weight-bold'>Désactivé</span>
												{% endif %}
											</h5>
										</div>
										<p>{{notification.content}}</p>
										<div class='align-self-end '>
											<a href="{{path('nationSound_notification_edit', {id : notification.id})}}" class="btn btn-success">Modifier</a>
											<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal{{notification.id}}">
												Supprimer
											</button>
										</div>
									</div>
								</article>
								<div class="modal fade" id="exampleModal{{notification.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered">
										<div class="modal-content">
											<div class="modal-header">
												<h1 class="modal-title fs-5" id="exampleModalLabel">Attention</h1>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
											</div>
											<div class="modal-body">
												{{notification.id}}
												Etes vous sûr de vouloir supprimer definitivement cette notification ? Si oui clicker sur
												<span class='text-danger'>'Supprimer'</span>
											</div>
											<div class="modal-footer">
												<a href="{{path('nationSound_delete_notification', {id : notification.id})}}" class="btn btn-danger">Supprimer</a>
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</section>
					</div>
				{% else %}
					<div class='my-3'>
						{% include '_partials/_dashboardNationSound.html.twig' %}
						<a href="{{path('nationSound_notification_edit')}}" class='btn btn-primary'>Rediger</a>
					</div>
					<section>
						<p class='text-white'>Il n'y a pour le moment aucune notification, clicker sur
							<span class='text-primary'>Rediger</span>
							pour commencer</p>
					</section>
				{% endif %}
			</section>
		</section>
	</body>
{% endblock %}
