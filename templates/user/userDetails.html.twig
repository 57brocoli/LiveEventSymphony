{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="row">
			<h1>{{user.firstName}}
				{{user.lastName}}</h1>
			<hr>
			<div class="col-6">
				<p>Email :
					{{user.email}}</p>
				<p>Adresse :
					{{user.address}}
					<br>
					{{user.zipCode}}
					<br>
					{{user.city}}</p>
				<p>Role :
					{{user.roles[0]}}</p>
				<p>Date d'inscriptiuon :
					{{user.createdAt|date("d/m/Y")}}</p>
				<p>Inscrit à la newsletter :
					{% if user.isSubscriber is same as(false) %}
						non
					{% else %}
						oui
					{% endif %}
				</p>
			</div>
			<a href="{{path('app_editUser', {id: user.id})}}" class="col-6">
				<button class='btn btn-primary'>Modifier mes données</button>
			</a>
		</div>
	</section>
{% endblock %}
