{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="row">
			<article class="col mx-4 mx-lg-0">
				<h1>Modifier mes données</h1>
				<hr>
				{{ form_start(form) }}
				<div class="d-flex">
					<fieldset class='col-5 px-2'>
						<legend>Identité</legend>
						{{ form_row(form.lastname) }}
						{{ form_row(form.firstname) }}
						{{ form_row(form.email) }}
					</fieldset>
					<fieldset class='col-5 px-2'>
						<legend>Coordonnées</legend>
						{{ form_row(form.address) }}
						{{ form_row(form.zipcode) }}
						{{ form_row(form.city) }}
					</fieldset>
				</div>
				<section class='px-2'>
					{{ form_row(form.password) }}
					{{ form_row(form.newsLetter) }}
					{{ form_end(form) }}
				</section>
			</article>
		</div>
	</section>
{% endblock %}
